<project name="Multichannel" basedir=".." default="jar">

	<path id="lib">
		<fileset dir="lib" includes="**/*.jar" />
	</path>

	<target name="clean">
		<delete dir="build" />
	</target>

	<target name="compile" depends="clean">
		<!-- Compile the java code -->
		<mkdir dir="build" />
		<javac compiler="modern" debug="true" srcdir="src" source="1.6" target="1.6" destdir="build" encoding="UTF-8" fork="true">
			<classpath>
				<path refid="lib" />
			</classpath>
		</javac>
		<copy todir="build/icons">
			<fileset dir="data/images">
				<include name="*.*" />
			</fileset>
		</copy>
	</target>

	<target name="jar" depends="compile">
		<!-- Build the jar file -->
		<jar basedir="build" destfile="Multichannel.jar" manifest="META-INF/MANIFEST.MF" />
	</target>

</project>